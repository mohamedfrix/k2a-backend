# ===========================================
# K2A Backend Environment Configuration Example
# ===========================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------
# Server Configuration
# -----------------------------------------
NODE_ENV=development
PORT=5000
API_VERSION=v1

# -----------------------------------------
# Database Configuration
# -----------------------------------------
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://k2a_user:your_password_here@localhost:5432/k2a_db?schema=public"

# -----------------------------------------
# Docker Compose PostgreSQL Configuration
# -----------------------------------------
POSTGRES_USER=k2a_user
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=k2a_db
POSTGRES_PORT=5432

# -----------------------------------------
# JWT Authentication Configuration
# -----------------------------------------
# Generate secure random strings for production using: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-at-least-32-characters-long

# JWT Token Expiration Times
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# -----------------------------------------
# CORS Configuration
# -----------------------------------------
FRONTEND_URL=http://localhost:3000

# -----------------------------------------
# Rate Limiting Configuration
# -----------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# -----------------------------------------
# Logging Configuration
# -----------------------------------------
LOG_LEVEL=info

# -----------------------------------------
# Initial Admin Configuration
# -----------------------------------------
# The backend will automatically create this admin on startup if it doesn't exist
INITIAL_ADMIN_EMAIL=admin@k2a.com
INITIAL_ADMIN_PASSWORD=admin123
INITIAL_ADMIN_FIRST_NAME=Admin
INITIAL_ADMIN_LAST_NAME=K2A

# -----------------------------------------
# MinIO Object Storage Configuration
# -----------------------------------------
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_password_123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=localhost
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_password_123
MINIO_BUCKET_NAME=k2a-vehicle-images
MINIO_USE_SSL=false
MINIO_BASE_URL=http://localhost:9000

# -----------------------------------------
# Optional: pgAdmin Configuration
# -----------------------------------------
# PGADMIN_DEFAULT_EMAIL=admin@k2a.com
# PGADMIN_DEFAULT_PASSWORD=admin123
# PGADMIN_PORT=8080
